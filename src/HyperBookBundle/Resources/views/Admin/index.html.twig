{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} | Home{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h3 class="panel-title"><span class="glyphicon glyphicon-book"></span>&nbsp;Manage Books</h3>
                    </div>
                    <div class="panel-body">
                        <a class="btn btn-warning" href="{{ path('admin_book_add') }}">Add a Book</a>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover col-md-12">
                                <tr>
                                    <th class="col-md-2">TITLE</th>
                                    <th class="col-md-2">AUTHOR</th>
                                    <th class="col-md-2">DESCRIPTION</th>
                                    <th class="col-md-2">CATEGORY</th>
                                    <th class="col-md-2">EDIT</th>
                                    <th class="col-md-2">DELETE</th>
                                </tr>
                                {% for book in books %}
                                    <tr>
                                        <td class="col-md-2">{{ book.title }}</td>
                                        <td class="col-md-2">{{ book.author }}</td>
                                        <td class="col-md-2">{{ book.description }}</td>
                                        <td class="col-md-2">{{ book.category }}</td>
                                        <td class="col-md-2"><a class="btn btn-warning" href="{{ path('admin_book_edit', { 'bookId': book.id }) }}">Edit</a></td>
                                        <td class="col-md-2"><a class="btn btn-danger" href="{{ path('admin_book_delete', { 'bookId': book.id }) }}">Delete</a></td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="panel-title"><span class="glyphicon glyphicon-tags"></span>&nbsp;Manage Categories</h3>
                    </div>
                    <div class="panel-body">
                        <a class="btn btn-danger" href="{{ path('admin_category_add') }}">Add a Category</a>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover col-md-12">
                                <tr>
                                    <th class="col-md-3">NAME</th>
                                    <th class="col-md-3">DESCRIPTION</th>
                                    <th class="col-md-3">EDIT</th>
                                    <th class="col-md-3">DELETE</th>
                                </tr>
                                {% for category in categories %}
                                    <tr>
                                        <td class="col-md-3">{{ category.name }}</td>
                                        <td class="col-md-3">{{ category.description }}</td>
                                        <td class="col-md-3"><a class="btn btn-warning" href="{{ path('admin_category_edit', { 'categoryId': category.id }) }}">Edit</a></td>
                                        <td class="col-md-3"><a class="btn btn-danger" href="{{ path('admin_category_delete', { 'categoryId': category.id }) }}">Delete</a></td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
